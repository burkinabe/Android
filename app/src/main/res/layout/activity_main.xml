<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivMenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|left"
                android:padding="@dimen/ten"
                android:src="@drawable/ic_menu" />

            <ImageView
                android:id="@+id/tvLoginViaFace"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="end|center_vertical"
                android:padding="@dimen/ten"
                android:visibility="gone"
                android:src="@drawable/user"/>

        </FrameLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ten"
                    android:contentDescription="@string/app_name"
                    android:src="@mipmap/logo_loign" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/ten"
                    android:layout_marginLeft="@dimen/ten"
                    android:layout_marginTop="@dimen/margin_fifteen"
                    android:layout_marginEnd="@dimen/ten"
                    android:visibility="gone"
                    android:layout_marginRight="@dimen/ten"
                    android:background="@drawable/btn_bg_red">

                    <com.accurascandemo.view.CustomButton
                        android:id="@+id/btnLoginViaFace"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/sixty"
                        android:background="@null"
                        android:paddingStart="@dimen/margin_twenty"
                        android:paddingLeft="@dimen/margin_twenty"
                        android:paddingEnd="@dimen/margin_twenty"
                        android:paddingRight="@dimen/margin_twenty"
                        android:text="@string/loginViaFace"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="17dp"
                        app:typeface="ALLER_STD_REG" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/margin_fifteen"
                        android:layout_marginLeft="@dimen/margin_fifteen"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/ic_barcode" />

                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/ten"
                    android:layout_marginLeft="@dimen/ten"
                    android:layout_marginTop="@dimen/margin_twenty"
                    android:layout_marginEnd="@dimen/ten"
                    android:layout_marginRight="@dimen/ten"
                    android:background="@drawable/btn_bg_red">

                    <com.accurascandemo.view.CustomButton
                        android:id="@+id/btnPassport"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/sixty"
                        android:background="@null"
                        android:gravity="center"
                        android:text="@string/passport_id"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="17dp"
                        app:typeface="ALLER_STD_REG" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/margin_fifteen"
                        android:layout_marginLeft="@dimen/margin_fifteen"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/ic_passport" />

                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/ten"
                    android:layout_marginLeft="@dimen/ten"
                    android:layout_marginTop="@dimen/margin_fifteen"
                    android:layout_marginEnd="@dimen/ten"
                    android:layout_marginRight="@dimen/ten"
                    android:background="@drawable/btn_bg_grey">

                    <com.accurascandemo.view.CustomButton
                        android:id="@+id/btnDrivingLicense"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/sixty"
                        android:background="@null"
                        android:paddingStart="@dimen/margin_twenty"
                        android:paddingLeft="@dimen/margin_twenty"
                        android:paddingEnd="@dimen/margin_twenty"
                        android:paddingRight="@dimen/margin_twenty"
                        android:text="@string/driving_license"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="17dp"
                        app:typeface="ALLER_STD_REG" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/margin_fifteen"
                        android:layout_marginLeft="@dimen/margin_fifteen"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/ic_driving_license" />

                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/ten"
                    android:layout_marginLeft="@dimen/ten"
                    android:layout_marginTop="@dimen/margin_fifteen"
                    android:layout_marginEnd="@dimen/ten"
                    android:layout_marginRight="@dimen/ten"
                    android:background="@drawable/btn_bg_red">

                    <com.accurascandemo.view.CustomButton
                        android:id="@+id/btnPanCard"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/sixty"
                        android:background="@null"
                        android:paddingStart="@dimen/margin_twenty"
                        android:paddingLeft="@dimen/margin_twenty"
                        android:paddingEnd="@dimen/margin_twenty"
                        android:paddingRight="@dimen/margin_twenty"
                        android:text="@string/pan_card"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="17dp"
                        app:typeface="ALLER_STD_REG" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/margin_fifteen"
                        android:layout_marginLeft="@dimen/margin_fifteen"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/ic_pan_card" />

                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/ten"
                    android:layout_marginLeft="@dimen/ten"
                    android:layout_marginTop="@dimen/margin_fifteen"
                    android:layout_marginEnd="@dimen/ten"
                    android:layout_marginRight="@dimen/ten"
                    android:background="@drawable/btn_bg_grey">

                    <com.accurascandemo.view.CustomButton
                        android:id="@+id/btnAdhaarCard"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/sixty"
                        android:background="@null"
                        android:paddingStart="@dimen/margin_twenty"
                        android:paddingLeft="@dimen/margin_twenty"
                        android:paddingEnd="@dimen/margin_twenty"
                        android:paddingRight="@dimen/margin_twenty"
                        android:text="@string/aadhaar_card"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="17dp"
                        app:typeface="ALLER_STD_REG" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/margin_fifteen"
                        android:layout_marginLeft="@dimen/margin_fifteen"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/ic_aadhaar_card" />

                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/ten"
                    android:layout_marginLeft="@dimen/ten"
                    android:layout_marginTop="@dimen/margin_fifteen"
                    android:layout_marginEnd="@dimen/ten"
                    android:layout_marginRight="@dimen/ten"
                    android:background="@drawable/btn_bg_red">

                    <com.accurascandemo.view.CustomButton
                        android:id="@+id/btnBarcode"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/sixty"
                        android:background="@null"
                        android:paddingStart="@dimen/margin_twenty"
                        android:paddingLeft="@dimen/margin_twenty"
                        android:paddingEnd="@dimen/margin_twenty"
                        android:paddingRight="@dimen/margin_twenty"
                        android:text="@string/barcode"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="17dp"
                        app:typeface="ALLER_STD_REG" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/margin_fifteen"
                        android:layout_marginLeft="@dimen/margin_fifteen"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/ic_barcode" />

                </FrameLayout>
            </LinearLayout>

        </ScrollView>

    </LinearLayout>

    <ListView
        android:id="@+id/lvDrawer"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@android:color/white"
        android:choiceMode="singleChoice"
        android:divider="@null"
        android:dividerHeight="0dp"
        android:headerDividersEnabled="false" />

</androidx.drawerlayout.widget.DrawerLayout>